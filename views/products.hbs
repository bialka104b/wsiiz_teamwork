<form class="d-flex" method="POST" action="/" novalidate>
    <input class="form-control me-2" name="searchInput" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-light" type="submit">Search</button>
</form>

<div class="row">
    <div class="col-6"><h1>Users</h1></div>    
    <div class="col-6 d-flex justify-content-end">
        <a href="/adduser" type="button" class="btn btn-primary align-self-center">Add User</a>
    </div>
</div>

<table class="table table-bordered table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <th scope="row">{{this.Id}}</th>
            <td>{{this.NazwaProduktu}}</td>
            <td>{{this.Opis}}</td>
            <td>{{this.NazwaKategorii}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>